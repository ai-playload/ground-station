<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="314dp"
    android:layout_height="334dp"
    android:background="@drawable/floating_new_audio_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/audio_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audio_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="音频文件"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <java.com.example.ground_station.data.view.ConnectStatusView
            android:id="@+id/statusView"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/audio_title_tv"
            android:layout_marginRight="0dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <View
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_close_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/audio_title_tv"
            android:background="#33e6e6e8" />

    </RelativeLayout>

    <include layout="@layout/audio_size_layout"
        style="@style/ActivityTranslucent"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/upload_button"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/audio_loop_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_upload_file"
            android:drawableTint="@drawable/text_color_selector"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="上传文件"
            android:textColor="@drawable/text_color_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/audio_loop_select"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/audio_loop_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_audio_loop"
            android:drawableTint="@drawable/text_color_selector"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:text="循环播放"
            android:textColor="@drawable/text_color_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/audio_delete_btn"
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/audio_loop_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_audio_delete"
            android:drawableTint="@drawable/text_color_selector"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:paddingLeft="9dp"
            android:textColor="@drawable/text_color_selector"
            android:textSize="13sp" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabSelectedTextColor="@color/tab_selected_color"
        app:tabTextColor="@color/tab_unselected_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/remote_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:scrollbars="vertical"
        android:visibility="gone" />


</LinearLayout>