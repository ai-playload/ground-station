<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContent"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/floating_layout_bg_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_close" />

    <TextView
        android:id="@+id/volume_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_btn"
        android:layout_marginLeft="28dp"
        android:text="调整音量"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volume_text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:max="100"
        android:min="0"
        android:progress="100"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/purple"
        android:thumb="@drawable/custom_thumb" />

    <LinearLayout
        android:layout_below="@+id/seek_bar"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ylBsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_btn"
            android:layout_marginLeft="28dp"
            android:text="音量倍数：1.0"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar_bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volume_text"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:max="20"
            android:min="0"
            android:progress="0"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/purple"
            android:thumb="@drawable/custom_thumb" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/speak_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volume_text"
        android:layout_marginTop="84dp"
        android:gravity="center">

        <Button
            android:id="@+id/shout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始喊话" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speak_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/up_rotation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_keyboard_arrow_up" />

            <ImageView
                android:id="@+id/down_rotation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_keyboard_arrow_down" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_control_camera" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.lzf.easyfloat.example.widget.ScaleImage
        android:id="@+id/ivScale"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:src="@drawable/icon_scale" />

</RelativeLayout>