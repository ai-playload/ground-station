<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlContent"
    android:layout_width="388dp"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_layout_bg_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_close" />

    <TextView
        android:id="@+id/safety_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:text="安全开关："
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/safety_button"
        android:layout_width="88dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/safety_title"
        android:background="@drawable/custom_btn_bg"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="关机中"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/put_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safety_button"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:text="放线长度：0m"
        android:textColor="@color/white"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/put_line_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:paddingRight="16dp"
        android:text="重量：--kg"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/location_tv"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/safety_button"
        android:text="更新"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <!--    <TextView-->
    <!--        android:id="@+id/location_tv"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textColor="@color/white"-->
    <!--        android:textSize="12sp"-->
    <!--        android:text="当前位置：未到限位"-->
    <!--        android:layout_marginTop="4dp"-->
    <!--        android:layout_below="@+id/put_line_tv"-->
    <!--        android:layout_marginLeft="16dp"/>-->

    <LinearLayout
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_tv"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radio_button_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@drawable/radio_button_color"
                android:text="速度：  "
                android:textColor="@color/white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/audioContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray_white"
                app:boxStrokeColor="@drawable/border_color_state_list"
                app:boxStrokeWidth="1dp"
                app:cursorColor="@color/blue"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/audioInputContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  档位（1~10）"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/speedComiftBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_btn_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="确认"
                android:textColor="#fff"
                android:visibility="visible" />

            <!--            <TextView-->
            <!--                android:id="@+id/hint_tv"-->
            <!--                android:paddingHorizontal="15dp"-->
            <!--                android:paddingVertical="10dp"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:visibility="visible"-->
            <!--                android:textSize="12sp"-->
            <!--                android:background="@drawable/custom_btn_bg"-->
            <!--                android:text="确认"-->
            <!--                android:paddingRight="16dp"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_below="@+id/weight_tv"-->
            <!--                android:layout_marginLeft="16dp"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radio_button_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@drawable/radio_button_color"
                android:text="步进长度："
                android:textColor="@color/white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/speedContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray_white"
                app:boxStrokeColor="@drawable/border_color_state_list"
                app:boxStrokeWidth="1dp"
                app:cursorColor="@color/blue"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/speedInputContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  m（1~30）"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/up_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="上升" />

    <Button
        android:id="@+id/down_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/up_action"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/up_action"
        android:text="下降" />

    <Button
        android:id="@+id/stop_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/up_action"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/down_action"
        android:text="停止" />

    <Button
        android:id="@+id/braking_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_action"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="紧急制动"
        android:visibility="gone" />

    <TextView
        android:id="@+id/circuit_tv"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_action"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/custom_btn_disable_bg"
        android:gravity="center"
        android:lines="1"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="@string/ciruit"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/removePeelBtn"
        android:layout_width="88dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_action"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/circuit_tv"
        android:background="@drawable/custom_btn_bg"
        android:paddingHorizontal="11dp"
        android:paddingVertical="10dp"
        android:text="重量去皮"
        android:textColor="#fff" />
    <TextView
        android:id="@+id/lenghtResetBtn"
        android:layout_width="88dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_action"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/removePeelBtn"
        android:background="@drawable/custom_btn_bg"
        android:paddingHorizontal="11dp"
        android:paddingVertical="10dp"
        android:text="完全收线"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/relieve_tv"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lenghtResetBtn"
        android:background="@drawable/custom_btn_bg"
        android:layout_alignTop="@+id/lenghtResetBtn"
        android:layout_marginLeft="1dp"
        android:text="更新长度"
        android:visibility="visible" />
    <TextView
        android:id="@+id/zoneTv"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/stop_action"
        android:background="@drawable/custom_btn_bg"
        android:layout_alignTop="@+id/stop_action"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        android:text="零位学习"
        android:textColor="#fff"
        android:visibility="visible" />

    <Button
        android:id="@+id/textSendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circuit_tv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/relieve_tv"
        android:text="测试一次性发送多条指令"
        android:textSize="12dp"
        android:visibility="gone" />

