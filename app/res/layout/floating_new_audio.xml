<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:layout_height="304dp"
    android:background="@drawable/floating_new_audio_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/audio_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audio_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="喊话"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_close_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/audio_title_tv"
            android:background="#33e6e6e8" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/audio_shout_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@null"
        android:src="@drawable/ic_new_shout_play" />

    <TextView
        android:id="@+id/audio_shout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="点击开始喊话"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/audio_progressBar"
            android:layout_width="226dp"
            android:layout_height="16dp"
            android:layout_marginLeft="32dp"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="2dp"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            android:thumb="@drawable/progress_seekbar_thumb" />

        <View
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_thumb" />

        <View
            android:layout_width="11dp"
            android:layout_height="9dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="5.5dp"
            android:background="@drawable/ic_volume"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/audio_up_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@null"
            android:src="@drawable/audio_up_selector"
            android:layout_marginRight="40dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/audio_center_btn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@null"
            android:src="@drawable/audio_center_selector" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/audio_down_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@null"
            android:src="@drawable/audio_down_selector"
            android:layout_marginLeft="40dp" />

    </LinearLayout>


