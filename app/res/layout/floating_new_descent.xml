<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="442dp"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_new_audio_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/audio_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audio_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="索降"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_close_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/audio_title_tv"
            android:background="#33e6e6e8" />

    </RelativeLayout>

    <TextView
        android:id="@+id/safety_button"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/power_bg_selector"
        android:clickable="true"
        android:drawableRight="@drawable/ic_power"
        android:drawableTint="@drawable/text_color_selector"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="安全开关"
        android:textColor="@drawable/text_color_selector"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="27dp">

        <LinearLayout
            android:layout_width="@dimen/sj_hint_name_width"
            android:layout_height="32dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lenghtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="放线长度："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/put_line_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="0  m"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="17dp"
            android:layout_weight="1"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="重量："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="--  kg"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/removePeelBtn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/power_stroke_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_qp"
            android:drawablePadding="4dp"
            android:drawableTint="@drawable/text_color_selector"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:paddingHorizontal="13dp"
            android:text="去皮"
            android:textColor="@drawable/text_color_selector"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/sj_hint_name_width"
            android:layout_height="32dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="速度："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/speed_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:text="1 m/min"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/speed_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:max="9"
            android:min="0"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_layer_jd"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/speedComiftBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="11dp"
            android:background="#fa0"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="确认"
            android:textColor="#fff"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="@dimen/sj_hint_name_width"
            android:layout_height="32dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="步进长度："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="1  m"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/length_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:max="29"
            android:min="0"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_layer"
            android:thumb="@drawable/seekbar_thumb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/circuit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/urgent_selector"
            android:drawablePadding="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="紧急熔断"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/lenghtResetBtn"
            style="@style/sj_fun_btn_style"
            android:drawableTop="@drawable/limit_selector"
            android:text="完全收线" />

        <TextView
            android:id="@+id/stop_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/stop_selector"
            android:drawablePadding="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="停止"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/up_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/audio_up_selector"
            android:drawablePadding="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="上升"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/down_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/audio_down_selector"
            android:drawablePadding="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="下降"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/zoneTv"
            style="@style/sj_fun_btn_style"
            android:drawableTop="@drawable/limit_selector"
            android:text="零位学习" />

        <TextView
            android:id="@+id/textSendBtn"
            style="@style/sj_fun_btn_style"
            android:drawableTop="@drawable/limit_selector"
            android:text="测试发送多条指令" />

        <TextView
            android:id="@+id/relieve_tv"
            style="@style/sj_fun_btn_style"
            android:drawableTop="@drawable/limit_selector"
            android:text="获取绳长" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>


</LinearLayout>