<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="432dp"
    android:layout_height="317dp"
    android:background="@drawable/floating_new_audio_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/audio_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audio_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="索降"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_close_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/audio_title_tv"
            android:background="#33e6e6e8" />

    </RelativeLayout>

    <TextView
        android:id="@+id/safety_button"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/power_bg_selector"
        android:clickable="true"
        android:drawableRight="@drawable/ic_power"
        android:drawableTint="@drawable/text_color_selector"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="安全开关"
        android:textColor="@drawable/text_color_selector"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="俯仰："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="0  m"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="重量："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="0  kg"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="速度："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/speed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="1  m/min"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/speed_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="10"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_layer"
            android:thumb="@drawable/seekbar_thumb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/shape_general_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="步进长度："
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_loop_cb"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="1  m"
                android:textColor="#ffe2e6f2"
                android:textSize="13sp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/length_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="10"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_layer"
            android:thumb="@drawable/seekbar_thumb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/circuit_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="紧急熔断"
            android:textColor="@color/white"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/urgent_selector"
            android:clickable="true"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/braking_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="限位"
            android:textColor="@color/white"
            android:drawableTop="@drawable/limit_selector"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/stop_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="停止"
            android:textColor="@color/white"
            android:drawableTop="@drawable/stop_selector"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/up_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上升"
            android:textColor="@color/white"
            android:drawableTop="@drawable/audio_up_selector"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/down_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="下降"
            android:textColor="@color/white"
            android:drawableTop="@drawable/audio_down_selector"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>