<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下时的背景（渐变） -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#fff78549" android:endColor="#fffbb658" android:type="linear" android:useLevel="true" />
            <corners android:radius="25dp"/>
        </shape>
    </item>
    <!-- 按下时的背景（渐变） -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#fff78549" android:endColor="#fffbb658" android:type="linear" android:useLevel="true" />
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <!-- 未选中状态的背景（纯色） -->
    <item>
        <shape android:layout_width="wrap_content" android:shape="rectangle">
            <solid android:color="#b3353a4a" />
            <stroke android:width="0.5dp" android:color="#ffe2e6f2"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

</selector>