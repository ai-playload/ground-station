<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下时的背景（渐变） -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#fff78549" android:startColor="#fffbb658" android:type="linear" android:useLevel="true" />
            <corners android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp" android:topLeftRadius="25dp" android:topRightRadius="25dp" />
        </shape>
    </item>
    <!-- 按下时的背景（渐变） -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#fff78549" android:startColor="#fffbb658" android:type="linear" android:useLevel="true" />
            <corners android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp" android:topLeftRadius="25dp" android:topRightRadius="25dp" />
        </shape>
    </item>

    <!-- 未选中状态的背景（纯色） -->
    <item>
        <shape android:layout_width="wrap_content" android:shape="rectangle">
            <solid android:color="#FF353A4A" />
            <corners android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp" android:topLeftRadius="25dp" android:topRightRadius="25dp" />
        </shape>
    </item>

</selector>