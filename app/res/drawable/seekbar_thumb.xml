<!-- res/drawable/seekbar_thumb.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <size android:width="12dp" android:height="12dp" />
    <stroke android:width="1dp" android:color="#ffe2e6f2" />
    <gradient
        android:type="linear"
        android:useLevel="true"
        android:startColor="#fffbb658"
        android:endColor="#fff78549"
        android:angle="180" />
    <corners android:radius="8dp" />
    <item android:name="android:shadowColor">#26000000</item>
    <item android:name="android:shadowDx">0</item>
    <item android:name="android:shadowDy">1</item>
</shape>
