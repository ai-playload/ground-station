<!-- res/drawable/seekbar_progress_layer.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:top="6.5dp" android:height="5dp" android:id="@android:id/background" android:drawable="@drawable/seekbar_background">
    </item>

    <!-- 次级进度（可选，如果不需要可以省略） -->
    <item android:top="6.5dp" android:height="5dp" android:id="@android:id/secondaryProgress"  android:drawable="@drawable/seekbar_background">
    </item>

    <!-- 主进度 -->
    <item android:top="6.5dp" android:height="5dp" android:id="@android:id/progress">
        <clip android:drawable="@drawable/seekbar_progress">
        </clip>
    </item>
</layer-list>
